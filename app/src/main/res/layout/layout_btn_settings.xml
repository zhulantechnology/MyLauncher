<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/id_settings"
    android:background="@drawable/selector_luncher_btn_bg"
    android:orientation="vertical"
    android:focusable="true"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:src="@drawable/ic_system_settings"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/string_system_settings"
        android:textColor="@color/color_launcher_main_text"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_launcher_main_text_size"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>
























